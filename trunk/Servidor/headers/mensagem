#ifndef __MENSAGEM__
#define __MENSAGEM__

struct Mensagem
{
    char remetente[32];
    char texto[1024];

    Mensagem(char remetente[32], char texto[1024])
    {
        strncpy(this.remetente, remetente, sizeof(this.remetente));
        strncpy(this.texto, texto, sizeof(this.texto));
    }
};

#endif

