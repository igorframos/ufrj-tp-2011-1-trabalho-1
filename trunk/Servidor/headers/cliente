#ifndef __CLIENTE__
#define __CLIENTE__

#include <pthread.h>
#include <sys/types.h>
#include <string>
#include <netinet/in.h>
#include <sys/socket.h>

struct Cliente
{
    std::string nome;
    int socketEnvioID;
    sockaddr_in endereco;
    int tamanho;
    pthread_t thread;

    Cliente(std::string nome = "", int socketEnvioID = -1): nome(nome), socketEnvioID(socketEnvioID)
    {
        tamanho = sizeof(endereco);
    }
};

#endif

